@model Zeus.Samples.MainSite.Features.Hero.HeroModel

<div class="position-relative overflow-hidden p-3 p-md-5 m-md-3 text-center bg-light">
    <div class="col-md-5 p-lg-5 mx-auto my-5">
        <h1 class="display-4 font-weight-normal">@Html.Glass().Editable(x => x.Title)</h1>
        <p class="lead font-weight-normal">@Html.Glass().Editable(x => x.Text)</p>
        @Html.Glass().Editable(x => x.Link, new { @class = "btn btn-outline-secondary" })
    </div>
    <div class="product-device shadow-sm d-none d-md-block"></div>
    <div class="product-device product-device-2 shadow-sm d-none d-md-block"></div>
</div>